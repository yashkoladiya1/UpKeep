                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },
                              { "sWidth": "1%" },


                        ],
                        "columnDefs": [
           {
               "targets": [1],
               "visible": false
           },
                {
                    "targets": [2],
                    "visible": false
                },
                        {
                            "targets": [4],
                            "visible": false
                        },
                      {
                          "targets": [6],
                          "visible": false
                      },
                        {
                            "targets": [10],
                            "visible": false
                        },
                {
                    "targets": [12],
                    "visible": false
                }
                        ]
                    });
                    $('#tblExcelImport_Item_filter').hide();
                    $('#txtSearch').on('keyup', function () {
                        $('#tblExcelImport_Item')
                        .DataTable()
                        .search($('#txtSearch').val(), false, true)
                        .draw();
                    });
                    $('#txtSearch').on('change', function () {
                        $('#tblExcelImport_Item')
                        .DataTable()
                        .search($('#txtSearch').val(), false, true)
                        .draw();
                    });
                }
            },
            error: function (json) { alert("Error " + json) }
        });
    };


    function Delete() {
        var isValid = true;
        $('.formrequired').each(function () {
            if ($.trim($(this).val()) == '') {
                isValid = false;
                $(this).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });
            }
            else {
                $(this).css({
                    "border": "",
                    "background": ""
                });
            }
        });


        if (isValid) {
            $.ajax({
                url: '@Url.Action("Item_DeleteForm", "Master")',
                type: "POST",
                dataType: "json",
                data: JSON.stringify({
                    Item_Code: $("#Item_Code").val()
                }),
                contentType: "application/json; charset=utf-8"
            }).done(function (data) {
                if (data.success) {
                    Clear();
                    display();
                }
                bootbox.alert(data.message);
            });
        }
    }

    $(function () {
        $("#Start_Date").datepicker({
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+0",
            dateFormat: 'dd-M-yy'
        });
    });

    $(function () {
        $("#End_Date").datepicker({
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+0",
            dateFormat: 'dd-M-yy'
        });

    });

